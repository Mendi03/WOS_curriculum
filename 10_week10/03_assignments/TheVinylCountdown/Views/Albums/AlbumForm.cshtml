@model AlbumFormViewModel

@{
    ViewData["Title"] = "Add Album";
}

<h1>Add an Album</h1>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="AddAlbum" asp-controller="Albums" method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title:</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Artist" class="form-label">Artist:</label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="form-text text-danger"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Add Album</button>
            </div>
        </form>
    </div>
</div>