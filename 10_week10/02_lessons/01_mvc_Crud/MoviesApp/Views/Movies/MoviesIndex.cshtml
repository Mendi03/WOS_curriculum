@* Views/Movies/MoviesIndex.cshtml *@
@model MoviesIndexViewModel

@{
    ViewData["Title"] = "All Movies";
    var movies = Model.Movies;
    var totalCount = Model.TotalCount;
}

<h1>All Movies</h1>

<div class="text-end">
    <a href="/movies/new" class="btn btn-primary">Add a Movie</a>
</div>

@if (totalCount == 0)
{
    <p>No movies in the database yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in movies)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                    <td>
                        <a href="/movies/@movie.Id">view</a>
                        <a href="/movies/@movie.Id/edit">edit</a>
                        <a href="/movies/@movie.Id/delete">delete</a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}